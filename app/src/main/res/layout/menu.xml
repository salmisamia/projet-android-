<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/game">



    <TextView
        android:layout_width="200dp"
        android:layout_height="71dp"
        android:text="KYODAI"
        android:id="@+id/KYDAI"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="50dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:text="Jouer"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_weight="0.08"
        android:enabled="true"
        android:backgroundTint="#f7dad8de" />
    <Button
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:text="Apropos"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_weight="0.08"
        android:backgroundTint="#f7dad8de" />

    <Button
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:text="Meilleur Score"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_weight="0.08"
        android:foregroundTint="#b91010"
        android:backgroundTint="#f7dad8de" />


    <Button
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:text="Quitter"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:textSize="25dp"
        android:backgroundTint="#f7dad8de" />

    <CheckBox
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:text="ActivÃ© Sons"
        android:id="@+id/checkBox"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="80dp"
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:checked="false"
        android:backgroundTint="#f7dad8de" />
































</LinearLayout>